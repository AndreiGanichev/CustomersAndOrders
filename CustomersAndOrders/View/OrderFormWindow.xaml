<Window x:Class="CustomersAndOrders.View.OrderFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="200" Width="250">
    <Grid>
        <Label Margin="10,20,10,50" Padding="1" HorizontalAlignment="Left" VerticalAlignment="Top">Описание заказа</Label>
        <TextBox Text="{Binding NewOrderDescription}" Margin="10 45 10 45"></TextBox>
        <Button Margin="10" Width="70" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Command="{Binding SaveOrderData}">Сохранить</Button>
    </Grid>
</Window>
